<Window x:Class="Basta.GUI.Login.Lobby.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basta.GUI.Login.Lobby"
        xmlns:languages="clr-namespace:Basta.Properties"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="LobbyWindow" Height="639" Width="956.4">
    <Grid>


        <DockPanel LastChildFill="False" RenderTransformOrigin="0.07,0.47">
            <StackPanel DockPanel.Dock="Top" Height="95" Background="#FF211E1E" VerticalAlignment="Center">
                <Label x:Name="countLabel" Content="{x:Static languages:Resource.Lobby_Label_Waitingfor}" Foreground="#DDFFFFFF" FontSize="36" Margin="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="95"/>
            </StackPanel>
            <StackPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}}" DockPanel.Dock="Top" VerticalAlignment="Center" Background="#FF783E3E" Height="1" RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
            </StackPanel>


            <StackPanel VerticalAlignment="Center" DockPanel.Dock="Bottom" Height="232" Background="#FF211E1E" Orientation="Horizontal" HorizontalAlignment="Center">

                <StackPanel Width="402" HorizontalAlignment="Center" Margin="25,25,0,0">
                    
                    <Label Content="{x:Static languages:Resource.Lobby_Label_Roomsettings}" Foreground="#DDF0EDED" Margin="0,0,0,-5" Background="#FF400606"></Label>

                    <Border BorderThickness="2,0,2,2" BorderBrush="#FF400606" Padding="15" Margin="0,-5,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Playerslimit}" FontSize="16" TextDecorations="{x:Null}"/>
                                <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Roundslimit}" FontSize="16" TextDecorations="{x:Null}"/>
                                <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Roundstempo}" FontSize="16" TextDecorations="{x:Null}"/>
                                <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Foreground="#FFC92C2C" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Roomcode}" FontSize="16" TextDecorations="{x:Null}"/>
                                <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>
                            </StackPanel>

                        </StackPanel>
                        
                        
                        

                    </Border>


              



                </StackPanel>

                <Button Content="{x:Static languages:Resource.Lobby_Button_Play}" Height="200" Margin="0" Padding="0" Width="200" FontSize="30" BorderBrush="Black" Foreground="#FFE2E2E2" Background="Black">
                    <Button.Effect>
                        <DropShadowEffect Direction="278" ShadowDepth="3" BlurRadius="0"/>
                    </Button.Effect>
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid>
                                <Ellipse Stroke="#FF211E1E" StrokeThickness="2">
                                    <Ellipse.Fill>
                                        <RadialGradientBrush>
                                            <RadialGradientBrush.Transform>
                                                <TransformGroup>
                                                    <ScaleTransform ScaleY="0.65" />
                                                </TransformGroup>
                                            </RadialGradientBrush.Transform>
                                            <GradientStop Offset="0"
                                              Color="#FF211E1E" />
                                        </RadialGradientBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>


                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E59400" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="OrangeRed" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>



                    </Button.Template>
                </Button>
                <Button Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" Foreground="White" Content="{x:Static languages:Resource.Lobby_Button_Configureroom}" Margin="0,10,15,11" VerticalAlignment="Center" HorizontalAlignment="Right" Width="164" Background="#FFD94448" BorderBrush="#FFD94448"/>
            </StackPanel>


        </DockPanel>



        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF001781" Offset="0.778" />
                <GradientStop Color="#FFC50000" Offset="0.115" />
                <GradientStop Color="#FF001781" Offset="0.858"/>
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
