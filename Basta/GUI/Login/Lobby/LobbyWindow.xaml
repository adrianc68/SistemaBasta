<Window x:Class="Basta.GUI.Login.Lobby.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basta.GUI.Login.Lobby"
        xmlns:languages="clr-namespace:Basta.Properties"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="LobbyWindow" Height="639" Width="956.4" WindowStartupLocation="CenterScreen">
    <Grid>


        <DockPanel LastChildFill="False" RenderTransformOrigin="0.07,0.47">
            <StackPanel DockPanel.Dock="Top" Height="95" Background="#FF211E1E" VerticalAlignment="Center">
                <Label x:Name="countLabel" Content="{x:Static languages:Resource.Lobby_Label_Waitingfor}" Foreground="#DDFFFFFF" FontSize="36" Margin="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="95"/>
            </StackPanel>
            <StackPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type StackPanel}}}" DockPanel.Dock="Top" VerticalAlignment="Center" Background="#FF783E3E" Height="1" RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
            </StackPanel>


            <StackPanel DockPanel.Dock="Bottom" Height="232" Background="#FF211E1E" Margin="0">

                <Grid Margin="0,25,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">


                        <StackPanel Margin="25,0,15,0" VerticalAlignment="Center">
                            <Label Content="{x:Static languages:Resource.Lobby_Label_Roomsettings}" Foreground="#DDF0EDED" Margin="0,0,0,-5" Background="#FF363636"/>
                            <Border BorderThickness="2,0,2,2" BorderBrush="#FF363636" Padding="15" Margin="0,-5,0,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Playerslimit}" FontSize="16" TextDecorations="{x:Null}"/>
                                        <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Roundslimit}" FontSize="16" TextDecorations="{x:Null}"/>
                                        <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Roundstempo}" FontSize="16" TextDecorations="{x:Null}"/>
                                        <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Foreground="#FFFF0606" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="{x:Static languages:Resource.Lobby_Label_Roomcode}" FontSize="16" TextDecorations="{x:Null}"/>
                                        <TextBlock Foreground="#FF858585" TextAlignment="Left" Padding="0,0,0,5" UseLayoutRounding="False" FontFamily="Segoe UI Light" Height="25" Text="5 ejemplo" FontSize="16" TextDecorations="{x:Null}"/>
                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </StackPanel>

                    </Grid>

                    <Grid Grid.Column="1">

                        <Button Content="{x:Static languages:Resource.Lobby_Button_Play}" Height="200" Padding="0" FontSize="30" BorderBrush="Black" Foreground="#FFE2E2E2" Background="Black" Width="200" Margin="0,-220,0,0">
                            <Button.Effect>
                                <DropShadowEffect Direction="278" ShadowDepth="3" BlurRadius="0"/>
                            </Button.Effect>
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Grid>
                                        <Ellipse Stroke="#FF211E1E" StrokeThickness="2">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush>
                                                    <RadialGradientBrush.Transform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleY="0.65" />
                                                        </TransformGroup>
                                                    </RadialGradientBrush.Transform>
                                                    <GradientStop Offset="0"
                                              Color="#FF211E1E" />
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </ControlTemplate>

                            </Button.Template>
                        </Button>

                    </Grid>

                    <Grid  Grid.Column="2">

                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,25,0">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" Foreground="White" Content="{x:Static languages:Resource.Lobby_Button_Configureroom}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="220" Background="#FF2B2727" BorderBrush="#FF272626" Height="42" Margin="0,0,0,15">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" Foreground="White" Content="{x:Static languages:Resource.Lobby_Button_Destroyroom}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="220" Background="#FF2B2727" BorderBrush="#FF272626" Height="42" Margin="0,0,0,15">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="10" BorderThickness="2" Foreground="White" Content="{x:Static languages:Resource.Lobby_Button_Exit}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="220" Background="#FF2B2727" BorderBrush="#FF272626" Height="42" Click="exitButtonClicked">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>

                        </StackPanel>




                    </Grid>
                </Grid>








            </StackPanel>


        </DockPanel>



        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FF001781" Offset="0.778" />
                <GradientStop Color="#FFC50000" Offset="0.115" />
                <GradientStop Color="#FF001781" Offset="0.858"/>
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
